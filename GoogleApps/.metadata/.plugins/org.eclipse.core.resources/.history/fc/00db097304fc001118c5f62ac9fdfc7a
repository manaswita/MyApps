 <context-param>
  <param-name>org.restlet.application</param-name>
  <param-value>
   com.popularapps.saleskhoj.TestApplication
      </param-value>
 </context-param>

 <!-- Restlet adapter -->
 <servlet>
  <servlet-name>RestletServlet</servlet-name>
